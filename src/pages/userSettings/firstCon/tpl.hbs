<div class="con__mainSectionSettings">
    <div class="head__mainSectionSettings">
        {{#if photo}}
            <img
                    class="photo__mainSectionSettings"
                    src="{{photo}}"
                    alt="Аватар"
            />
        {{/if}}
        {{#unless photo}}
            <div class="photo__mainSettings">
                <img src="{{noAvatar}}" alt="Нет фото" />
            </div>
        {{/unless}}
        {{#if normal}}
            <div class="name__mainSettings">
                {{name}}
            </div>
        {{/if}}
    </div>
    {{#if normal}}
        <form autocomplete="off">
            {{{input}}}
        </form>
        {{{buttonSettings}}}
    {{/if}}
    {{#if change}}
        <form autocomplete="off">
            {{{inputChange}}}
        </form>
        {{{simpleButton}}}
    {{/if}}
    {{#if changePassword}}
        <form autocomplete="off">
            {{{inputsChangePassword}}}
        </form>
        {{{simpleButton}}}
    {{/if}}

</div>
